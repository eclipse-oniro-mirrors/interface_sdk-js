{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/*.ts"
    ]
}