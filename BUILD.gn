    "${sdk_build_public}",
    "--sdk-build-arkts",
    "${sdk_build_arkts}",
    "--npm-path",
    rebase_path(npm_path, root_build_dir),
  ]
  exec_script(arkts_sdk_config_parser, arkts_sdk_args)
